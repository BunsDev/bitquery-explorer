<div class="col-12 col-lg-6 mb-4">
  <div class="card">
    <div class="card-header"><%= t('widgets.headers.outbound_native_by_time', currency: @network[:currency]) %></div>
    <div class="card-body">
      <div id="outbound_native_by_time"><%= t('loading') %></div>
    </div>
  </div>
</div>

<script>

    $( document ).ready(function() {

        var query = new widgets.query(`
            query ($network: BitcoinNetwork!,
                $address:String!
                $dateFormat:String!
                $from: ISO8601DateTime,
                $till: ISO8601DateTime){
                  bitcoin(network: $network ){
                    inputs(
                      date: {
                                      since: $from
                                      till: $till}
                      inputAddress: {is: $address}
                      options:{asc: "date.date"}
                    ){

                         date: date{
                            date(format: $dateFormat)
                         }
                        count(uniq: transactions)
                        value

                    }


                  }
                }`);

        new widgets.chart('#outbound_native_by_time', query, 'bitcoin.inputs', {
            title: '<%= t('widgets.headers.outbound_native_by_time', currency: @network[:currency]) %>',
            chartOptions: {
                vAxes: {
                    '0': {
                        title: '<%= t('widgets.titles.volume_out', currency: @network[:currency]) %>'
                    },
                    '1': {
                        title: '<%= t('widgets.titles.transactions_count') %>'
                    }
                },
                hAxis: <%= render partial: 'shared/date_axis.json' %>,
                seriesType: 'bars',
                series: {
                    '0': { color: 'lightgreen' },
                    '1': { color: '#28a745', type: 'line', targetAxisIndex: 1, lineWidth: 3, pointsVisible: true, pointShape: 'diamond', pointSize: 12 }
                }
            },
            dataOptions: [
                {
                    title: {label: '<%= t('widgets.titles.date') %>', type: 'date' },
                    path: 'date.date'
                },
                {
                    title: '<%= t('widgets.titles.volume_out', currency: @network[:currency]) %>',
                    path: 'value'
                },
                {
                    title: '<%= t('widgets.titles.transactions_count') %>',
                    path: 'count'
                },

            ]
        });

